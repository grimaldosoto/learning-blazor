@page "/reverse-hill-pattern"
<h3>Reverse_hill_pattern</h3>

<ul>
    <li>Increasing triangle pattern - color: white</li>
    <li>Decreasing triangle pattern - color: mediumvioletred</li>
    <li>Decreasing triangle pattern - color: darkcyan</li>
</ul>
<div style="font-size:50px">
    @for(int i = 1; i <= Number; i++)
    {
        <div>
            @for(int j = 1; j <= i; j++)
            {
                <span style="color:white">& </span>
            }
            @for(int j = i; j < Number; j++)
            {
                <span style="color:mediumvioletred">& </span>
            }
            @for (int j = i; j <= Number; j++)
            {
                <span style="color:darkcyan">& </span>
            }
        </div>
    }
</div>

@code {
    private int Number = 5;
}
