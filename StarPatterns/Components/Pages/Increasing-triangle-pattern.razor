@page "/increasing-triangle-pattern"
<h3>Increasing triangle pattern</h3>

<ul>
    <li>Row</li>
    <li>Column</li>
</ul>

<div style="font-size: 50px;">
    @for(int i = 1; i <= Rows; i++)
    {
        <div>
            @for(int k = 1; k <= i; k++)
            {
                <span style="color:darkblue;">+</span>
            }
      </div>
    }
</div>

@code {
    private int Rows = 5;
}
