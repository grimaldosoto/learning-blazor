@page "/decreasing-triangle-pattern"
<h3>Decreasing triangle pattern</h3>

<ul>
    <li>Row</li>
    <li>Column</li>
</ul>

<div style="font-size: 50px">
    @for(int i = 0; i < Number; i++)
    {
        <div>
            @for(int j = i; j < Number; j++)
            {
                <span style="color: darkblue">| </span>
            }
        </div>
    }
</div>

@code {
    private int Number = 5;
}
